<?xml version="1.0" encoding="utf-8"?>

<objects>

	<script file="gui/common/functions_civinfo.js"/>
	<script file="gui/common/functions_structree.js"/>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_utility.js"/>
	<script file="gui/structree/structree.js"/>

	<!-- Add a translucent black background to fade out the menu page -->
	<object type="image" z="0" sprite="bkTranslucent"/>

	<object type="image" style="ModernDialog" size="50%-500 50%-368 50%+500 50%+370">

		<object style="TitleText" type="text" size="50%-128 -18 50%+128 14">
			<translatableAttribute id="caption">Structure Tree</translatableAttribute>
		</object>

		<!-- Civ selection -->
		<object size="16 10 100%-16 30">
			<object
				name="civSelectionHeading"
				type="text"
				font="sans-bold-16"
                textcolor="white"
				text_align="left"
				size="100%-264 10 100%-160 48">
				<translatableAttribute id="caption">Civilisation:</translatableAttribute>
			</object>

			<object name="civSelection" type="dropdown" style="ModernDropDown" size="100%-160 8 100% 34">
				<action on="SelectionChange">selectCiv(this.list_data[this.selected]);</action>
			</object>
		</object>

		<!-- Data display -->
		<object size="16 54 100%-16 100%-54">
			<object type="image" sprite="TranslucentPanelThinBorder" size="0 0 100% 100%">
		<!--		<object
					name="civGameplayHeading"
					type="text"
					font="sans-bold-16"
					textcolor="white"
					text_align="left"
					text_valign="center"
					size="10 0 100% 100%"
				/>-->
			</object>
			
			<!-- village_phase.png doesn't exist -->
			<object type="image" size="8 8 64-4 64-4"
				sprite="stretched:pregame/shell/logo/wfg_logo_white.png"
			/>
			
			<object type="image" size="8 160+8 64-4 160+64-4"
				sprite="stretched:session/portraits/technologies/town_phase.png"
			/>
			
			<object type="image" size="8 320+8 64-4 320+64-4"
				sprite="stretched:session/portraits/technologies/city_phase.png"
			/>
			
			<object type="image" style="TreeDisplay" size="64 8 100% 100%-8">
				
				<!-- Village Structures -->
				<repeat count="10">
					<object type="image" sprite="TranslucentPanelThinBorder" size="4 4 84 84+16" name="village_struct[n]" absolute="false">
						<object type="text" size="8 0 100%-8 20" style="StructNameSpecific" name="village_name_speci[n]"/>
						<object type="image" size="50%-32 8+16 50%+32 80-8+16" name="village_icon[n]"
							sprite="stretched:pregame/shell/logo/wfg_logo_white.png"
						/>
					</object>
				</repeat>
				
				<!-- Town Structures -->
				<repeat count="10">
					<object type="image" sprite="TranslucentPanelThinBorder" size="4 160+4 84 160+84+16" name="town_struct[n]">
						<object type="text" size="8 0 100%-8 20" style="StructNameSpecific" name="town_name_speci[n]"/>
						<object type="image" size="50%-32 8+16 50%+32 80-8+16" name="town_icon[n]"
							sprite="stretched:pregame/shell/logo/wfg_logo_white.png"
						/>
					</object>
				</repeat>
				
				<!-- City Structures -->
				<repeat count="5">
					<object type="image" sprite="TranslucentPanelThinBorder" size="4 320+4 84 320+84+16" name="city_struct[n]">
						<object type="text" size="8 0 100%-8 20" style="StructNameSpecific" name="city_name_speci[n]"/>
						<object type="image" size="50%-32 8+16 50%+32 80-8+16" name="city_icon[n]"
							sprite="stretched:pregame/shell/logo/wfg_logo_white.png"
						/>
					</object>
				</repeat>
				
			</object>
			
		</object>
		
		<!-- Close dialog -->
		<object
			type="button"
			style="StoneButton"
			size="100%-164 100%-44 100%-16 100%-16"
		>
			<translatableAttribute id="caption">Close</translatableAttribute>
			<action on="Press">
				<![CDATA[
					Engine.PopGuiPage();
				]]>
			</action>
		</object>

	</object>

</objects>
